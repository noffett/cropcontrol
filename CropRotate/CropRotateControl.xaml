<UserControl
    x:Class="CropRotate.CropRotateControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CropRotate">

    <Canvas>
        <Canvas.RenderTransform>
            <RotateTransform
                x:Name="RotateTransfom" />
        </Canvas.RenderTransform>

        <Image Source="{x:Bind Image, Mode=OneWay}" />

        <local:SelectionAreaControl
            x:Name="SelectionArea"
            RotationAngle="{x:Bind RotationAngle, Mode=OneWay}" />
        <!--
            RotationAnchorPoint="{x:Bind RotationAnchorPoint, Mode=TwoWay}" />-->

        <TextBlock
            FontSize="30"
            Margin="50">
            <Run Text="{x:Bind SelectionArea.HorizontalOffset, Mode=OneWay}" /> - 
            <Run Text="{x:Bind SelectionArea.VerticalOffset, Mode=OneWay}" />
        </TextBlock>
    </Canvas>
</UserControl>
