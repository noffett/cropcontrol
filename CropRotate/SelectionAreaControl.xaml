<UserControl
    x:Class="CropRotate.SelectionAreaControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CropRotate"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <Style TargetType="local:ResizeHandle">
            <Setter Property="Background" Value="Goldenrod" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:ResizeHandle">
                        <Border
                            Background="{TemplateBinding Background}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Canvas>
        <Grid
            x:Name="ResizeHandlePanel"
            Canvas.Left="{x:Bind HorizontalOffset}"
            Width="{x:Bind VisualWidth}"
            Canvas.Top="{x:Bind VerticalOffset}"
            Height="{x:Bind VisualHeight}"
            RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <RotateTransform
                    Angle="{x:Bind RotationAngle, Mode=OneWay}" />
            </Grid.RenderTransform> 
            
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>

            <local:ResizeHandle
                Grid.Row="0"
                Grid.Column="0"
                Orientation="HorizontalAndVertical"
                ResizeDelta="TopLeftResizeHandle_ResizeDelta"
                ResizeCompleted="ResizeHandle_ResizeCompleted" />
            <local:ResizeHandle
                Grid.Row="0"
                Grid.Column="1"
                Orientation="Vertical"
                ResizeDelta="TopLeftResizeHandle_ResizeDelta"
                ResizeCompleted="ResizeHandle_ResizeCompleted" />
            
            <local:ResizeHandle
                Grid.Row="1"
                Grid.Column="0"
                Orientation="Horizontal"
                ResizeDelta="TopLeftResizeHandle_ResizeDelta"
                ResizeCompleted="ResizeHandle_ResizeCompleted" />
            <local:ResizeHandle
                Background="Transparent"
                Grid.Row="1"
                Grid.Column="1"
                Orientation="HorizontalAndVertical"
                ResizeDelta="ResizeHandle_ResizeDelta"
                ResizeCompleted="ResizeHandle_ResizeCompleted" />
            <local:ResizeHandle
                Grid.Row="1"
                Grid.Column="2"
                Orientation="Horizontal"
                ResizeDelta="BottomRightResizeHandle_ResizeDelta"
                ResizeCompleted="ResizeHandle_ResizeCompleted" />
            
            <local:ResizeHandle
                Grid.Row="2"
                Grid.Column="1"
                Orientation="Vertical"
                ResizeDelta="BottomRightResizeHandle_ResizeDelta"
                ResizeCompleted="ResizeHandle_ResizeCompleted" />
            <local:ResizeHandle
                Grid.Row="2"
                Grid.Column="2"
                Orientation="HorizontalAndVertical"
                ResizeDelta="BottomRightResizeHandle_ResizeDelta"
                ResizeCompleted="ResizeHandle_ResizeCompleted" />
        </Grid>

        <Rectangle
            Stroke="Black"
            StrokeThickness="2"
            Width="{x:Bind VisualWidth, Mode=OneWay}"
            Height="{x:Bind VisualHeight, Mode=OneWay}"
            IsHitTestVisible="False"
            RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <TranslateTransform
                        X="{x:Bind HorizontalOffset, Mode=OneWay}"
                        Y="{x:Bind VerticalOffset, Mode=OneWay}" />
                    <RotateTransform
                        Angle="{x:Bind RotationAngle, Mode=OneWay}" />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Canvas>
</UserControl>
